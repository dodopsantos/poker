function nextSeatFrom(rt: TableRuntime, list: number[], fromSeat: number): number {
  if (!list.length) return fromSeat;
  
  const maxSeats = Object.keys(rt.players).length;
  let nextSeat = (fromSeat + 1) % maxSeats;
  
  for (let i = 0; i < maxSeats; i++) {
    if (list.includes(nextSeat)) {
      return nextSeat;
    }
    nextSeat = (nextSeat + 1) % maxSeats;
  }
  
  return list[0];
}
